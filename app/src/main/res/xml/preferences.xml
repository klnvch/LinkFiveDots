<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <by.klnvch.link5dots.settings.EditTextPreference
        android:defaultValue="@string/unknown"
        android:dialogIcon="@drawable/ic_mood_48dp"
        android:icon="@drawable/ic_mood_48dp"
        android:key="pref_username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/username" />
    <ListPreference
        android:defaultValue="en"
        android:dialogIcon="@drawable/ic_language_48dp"
        android:entries="@array/languages_entries"
        android:entryValues="@array/languages_values"
        android:icon="@drawable/ic_language_48dp"
        android:key="pref_language"
        android:summary="%s"
        android:title="@string/settings_language" />
    <by.klnvch.link5dots.settings.SwitchPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_vibration_48dp"
        android:key="pref_vibration"
        android:title="@string/settings_vibration" />
    <ListPreference
        android:defaultValue="system"
        android:dialogIcon="@drawable/ic_wb_sunny_48dp"
        android:entries="@array/night_modes_entries"
        android:entryValues="@array/night_modes_values"
        android:icon="@drawable/ic_wb_sunny_48dp"
        android:key="pref_night_mode"
        android:summary="%s"
        android:title="@string/settings_night_mode" />
    <by.klnvch.link5dots.settings.DeletePreference
        android:icon="@drawable/ic_delete_48dp"
        android:key="pref_delete"
        android:title="@string/settings_delete_all" />
    <by.klnvch.link5dots.settings.DotsTypePreference
        android:defaultValue="1"
        android:icon="@drawable/ic_grain_48dp"
        android:key="pref_dots_type"
        android:title="@string/settings_dots" />

</android.support.v7.preference.PreferenceScreen>