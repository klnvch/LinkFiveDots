<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>






    <style name="HelpText">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="HelpText.Caption">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="HelpText.Heading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="GuessWordText" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>
</resources>