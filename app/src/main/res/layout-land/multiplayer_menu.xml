<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/paper_tiled"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/btn_table_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multi_player_two_players"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/ic_people_48dp"
            android:drawableStart="@drawable/ic_people_48dp"
            android:onClick="onClick"
            android:text="@string/two_players"
            android:textColor="@color/black"
            android:textSize="@dimen/bt_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multi_player_bluetooth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/ic_bluetooth_48dp"
            android:drawableStart="@drawable/ic_bluetooth_48dp"
            android:onClick="onClick"
            android:text="@string/bluetooth_settings"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/multi_player_lan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/ic_router_48dp"
            android:drawableStart="@drawable/ic_router_48dp"
            android:onClick="onClick"
            android:text="@string/menu_local_network"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

        <Button
            android:visibility="invisible"
            android:id="@+id/multi_player_online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:drawableLeft="@drawable/ic_public_48dp"
            android:drawableStart="@drawable/ic_public_48dp"
            android:onClick="onClick"
            android:text="Online"
            android:textColor="@color/black"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>