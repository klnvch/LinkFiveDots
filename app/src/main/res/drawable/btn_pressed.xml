<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="@dimen/btn_inset"
    android:insetLeft="@dimen/btn_inset"
    android:insetRight="@dimen/btn_inset"
    android:insetTop="@dimen/btn_inset">
    <shape android:shape="rectangle">
        <corners android:radius="@dimen/btn_corner_radius" />
        <solid android:color="#CCCCCC" />
        <padding
            android:bottom="@dimen/btn_padding_vertical"
            android:left="@dimen/btn_padding_horizontal"
            android:right="@dimen/btn_padding_horizontal"
            android:top="@dimen/btn_padding_vertical" />
    </shape>
</inset>