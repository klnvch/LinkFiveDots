<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.klnvch.link5dots"
    android:versionCode="22"
    android:versionName="3.5.3" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <meta-data
        android:name="unityplayer.ForwardNativeEventsToDalvik"
        android:value="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Permissions required for GCM -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" /> <!-- Optional permission for App measurement to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="by.klnvch.link5dots.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!--
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name="by.klnvch.link5dots.bluetooth.BluetoothService" />
        <service android:name="by.klnvch.link5dots.nsd.NsdService" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="by.klnvch.link5dots.MainMenuActivity"
            android:configChanges="locale"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="by.klnvch.link5dots.MainActivity"
            android:configChanges="locale"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.MultiPlayerMenuActivity"
            android:configChanges="locale"
            android:label="@string/menu_multi_player" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.TwoPlayersActivity"
            android:configChanges="locale"
            android:label="@string/two_players" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MultiPlayerMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.bluetooth.DevicePickerActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/device_picker" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MultiPlayerMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.nsd.NsdPickerActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/menu_local_network" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MultiPlayerMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.online.OnlinePickerActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="Online" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MultiPlayerMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.bluetooth.BluetoothActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bluetooth.DevicePickerActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.nsd.NsdActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".bluetooth.DevicePickerActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.online.OnlineActivity"
            android:configChanges="orientation|keyboardHidden|locale"
            android:label="Online" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".online.OnlinePickerActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.ScoresActivity"
            android:configChanges="locale"
            android:label="@string/scores_title"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.HowToActivity"
            android:configChanges="locale"
            android:label="@string/how_to_title" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.settings.InfoActivity"
            android:configChanges="locale"
            android:label="@string/application_info_label"
            android:launchMode="standard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".settings.SettingsActivity" />
        </activity>
        <activity
            android:name="by.klnvch.link5dots.settings.SettingsActivity"
            android:configChanges="locale"
            android:label="@string/settings_label" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainMenuActivity" />
        </activity>
        <!--
        <activity
            android:name=".online.OnlinePickerActivity"
            android:label="Online">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MultiPlayerMenuActivity" />
        </activity>
        -->
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />

        <provider
            android:name="com.google.android.gms.measurement.AppMeasurementContentProvider"
            android:authorities="by.klnvch.link5dots.google_measurement_service"
            android:exported="false" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>